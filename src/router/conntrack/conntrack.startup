#!/bin/sh
# read setting from nvram
CONNTRACK_MAX=$(nvram get ip_conntrack_max)
CONNTRACK_TCP_TIMEOUTS=$(nvram get ip_conntrack_tcp_timeouts)
CONNTRACK_UDP_TIMEOUTS=$(nvram get ip_conntrack_udp_timeouts)

# adjust conntrack settings
/bin/echo $CONNTRACK_MAX > /proc/sys/net/ipv4/ip_conntrack_max 2>&1
/bin/echo $CONNTRACK_MAX > /proc/sys/net/ipv4/netfilter/ip_conntrack_max 2>&1
/bin/echo $CONNTRACK_MAX > /proc/sys/net/nf_conntrack_max 2>&1
/bin/echo $CONNTRACK_TCP_TIMEOUTS > /proc/sys/net/ipv4/netfilter/ip_conntrack_tcp_timeout_established 2>&1
/bin/echo $CONNTRACK_TCP_TIMEOUTS > /proc/sys/net/netfilter/nf_conntrack_tcp_timeout_established 2>&1
/bin/echo $CONNTRACK_UDP_TIMEOUTS > /proc/sys/net/ipv4/netfilter/ip_conntrack_udp_timeout 2>&1
/bin/echo $CONNTRACK_UDP_TIMEOUTS > /proc/sys/net/netfilter/nf_conntrack_udp_timeout 2>&1